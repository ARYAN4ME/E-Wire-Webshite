{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,

    "jsx": "react-jsx"
  }
}
